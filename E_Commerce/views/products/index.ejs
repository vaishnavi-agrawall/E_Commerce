<% layout('layouts/boilerplate') %>

<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>

<div class="container mt-3">
  <div class="row">
    <% for(let item of products){ %>
      <div class="col-lg-4 mb-3">
        <div class="card h-100 text-center shadow">
          <img class="card-img-top" src="<%= item.img %>" alt="Card image cap" style="height: 200px; object-fit: cover;">
          <div class="card-body">
            <h2 class="card-title"><%= item.name %></h2>
            <h5 class="card-title"><%= item.price %></h5>
            <p class="card-text"><%= item.desc %></p>
            <a href="/products/<%= item._id %>" class="btn btn-info">View Product</a>
            <% if(currentUser && currentUser.role==='seller'){ %>
              <form class="d-inline-block" action="/products/<%= item._id %>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
            <% } %>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

</body>
</html>
